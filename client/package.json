{
    "name": "client",
    "version": "0.1.0",
    "repository": "https://github.com/robertwayne/template-rocket-svelte-spa",
    "author": "Rob Wagner <rob@sombia.com>",
    "license": "MIT OR Apache-2.0",
    "private": true,
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "serve": "vite preview",
        "fmt": "prettier --write --plugin-search-dir=. **/*.{js,ts,svelte,html,css,cjs,mjs,json}",
        "lint": "eslint src/**/*.{js,ts,svelte}",
        "lint:fix": "eslint --fix --fix-type problem,suggestion src/**/*.{js,ts,svelte}",
        "tsc": "tsc --noEmit",
        "tsc:watch": "tsc --noEmit --watch",
        "test": "vitest run",
        "test:watch": "vitest",
        "check": "npm run tsc && npm run lint:fix && npm run test && npm run fmt"
    },
    "devDependencies": {
        "@sveltejs/vite-plugin-svelte": "^1.4.0",
        "@typescript-eslint/eslint-plugin": "^5.45.0",
        "@typescript-eslint/parser": "^5.45.0",
        "autoprefixer": "^10.4.13",
        "dotenv": "^16.0.3",
        "eslint": "^8.29.0",
        "eslint-plugin-svelte3": "^4.0.0",
        "happy-dom": "^7.7.2",
        "postcss": "^8.4.19",
        "postcss-load-config": "^4.0.1",
        "prettier": "^2.8.0",
        "prettier-plugin-tailwindcss": "^0.2.0",
        "svelte-language-server": "^0.14.38",
        "svelte-preprocess": "^4.10.7",
        "tailwindcss": "^3.2.4",
        "typescript": "^4.9.3",
        "vite": "^3.2.4",
        "vitest": "^0.25.3"
    },
    "dependencies": {
        "@tailwindcss/forms": "^0.5.3",
        "@tailwindcss/typography": "^0.5.8",
        "svelte": "^3.53.1",
        "svelte-navigator": "^3.2.2"
    }
}
