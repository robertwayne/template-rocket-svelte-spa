{
    "name": "client",
    "version": "0.1.0",
    "repository": "https://github.com/robertwayne/template-rocket-svelte-spa",
    "author": "Rob Wagner <rob@sombia.com>",
    "license": "MIT OR Apache-2.0",
    "type": "module",
    "private": true,
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "serve": "vite preview",
        "fmt": "prettier --write --plugin-search-dir=. **/*.{js,ts,svelte,html,css,cjs,json}",
        "lint": "eslint src/**/*.{ts,svelte}",
        "lint:fix": "eslint --fix --fix-type problem,suggestion **/*.{ts,svelte}",
        "tsc": "tsc --noEmit",
        "tsc:watch": "tsc --noEmit --watch",
        "test": "vitest run",
        "test:watch": "vitest",
        "check": "npm run tsc && npm run lint:fix && npm run test && npm run fmt"
    },
    "devDependencies": {
        "@sveltejs/vite-plugin-svelte": "^2.0.2",
        "@typescript-eslint/eslint-plugin": "^5.52.0",
        "@typescript-eslint/parser": "^5.52.0",
        "autoprefixer": "^10.4.13",
        "dotenv": "^16.0.3",
        "eslint": "^8.34.0",
        "eslint-plugin-svelte3": "^4.0.0",
        "happy-dom": "^8.5.0",
        "postcss": "^8.4.21",
        "postcss-load-config": "^4.0.1",
        "prettier": "^2.8.4",
        "prettier-plugin-tailwindcss": "^0.2.3",
        "svelte-language-server": "^0.15.3",
        "svelte-preprocess": "^5.0.1",
        "tailwindcss": "^3.2.7",
        "typescript": "^4.9.5",
        "vite": "^4.1.2",
        "vitest": "^0.28.5"
    },
    "dependencies": {
        "@tailwindcss/forms": "^0.5.3",
        "@tailwindcss/typography": "^0.5.9",
        "svelte": "^3.55.1",
        "svelte-navigator": "^3.2.2"
    }
}
